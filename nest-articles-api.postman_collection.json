{
  "info": {
    "_postman_id": "e7b2a5f1-1234-4321-aaaa-20251028",
    "name": "Nest Articles API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@admin.com\",\n  \"password\": \"123456\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var data = pm.response.json();",
              "if (data.access_token) {",
              "    pm.collectionVariables.set('token', data.access_token);",
              "    console.log('Token JWT salvo com sucesso');",
              "} else {",
              "    console.error('Nenhum token retornado');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Users - Listar Todos (Admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/users"
      }
    },
    {
      "name": "Users - Criar Novo (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/users",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Editor\",\n  \"email\": \"editor@teste.com\",\n  \"password\": \"123456\",\n  \"role\": \"Editor\"\n}"
        }
      }
    },
    {
      "name": "Articles - Listar Todos (Público)",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/articles"
      }
    },
    {
      "name": "Articles - Criar (Editor ou Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/articles",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Primeiro Artigo\",\n  \"content\": \"Conteúdo de teste do artigo\"\n}"
        }
      }
    },
    {
      "name": "Permissions - Listar (Admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/permissions"
      }
    }
  ]
}